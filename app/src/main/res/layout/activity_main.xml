<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView5" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/scoreLabel"
            android:id="@+id/textView2"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:text="@string/score"
            android:textColor="@color/textColor"
            android:textStyle="italic"
            android:textSize="30dp"
            android:paddingLeft="13dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newGame"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#FFF"
            android:textColor="#0B3C5D"
            android:onClick="newGame"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/timeLabel"
            android:id="@+id/textView6"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/wordLabel"
            android:id="@+id/textView3"
            android:textColor="@color/textColor"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/time"
            android:text="@string/score"
            android:textColor="@color/textColor"
            android:textStyle="italic"
            android:textSize="30dp"
            android:paddingLeft="13dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/currentWord"
        android:text=""
        android:textColor="@color/wordColor"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:gravity="center|center_horizontal" />

    <EditText android:id="@+id/ansField"
       android:layout_width="200dp"
       android:layout_height="40dp"
       android:hint="@string/ansField"
        android:textColor="@color/textColor"
        android:background="@color/backColor"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:inputType="textFilter"
        android:focusable="true"
        android:focusableInTouchMode="true" />


    <Button

        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="@string/enter"
        android:onClick="enter"
        android:id="@+id/button1"
        android:textColor="@color/textColor"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#0B3C5D" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/timeField" />

</LinearLayout>
